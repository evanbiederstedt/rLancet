PKG_CPPFLAGS = -I$(PKG_BASE)src/ -I$(PKG_BASE)src/bamtools-2.3.0/ -I$(PKG_BASE)src/htslib-1.3/ -std=c++11 -fPIC
PKG_CXXFLAGS = -I$(PKG_BASE)src/ -I$(PKG_BASE)src/bamtools-2.3.0/ -I$(PKG_BASE)src/htslib-1.3/ -std=c++11 -fPIC
PKG_LIBS = -L$(PKG_BASE)/src/lancet  -L$(PKG_BASE)src/-L$(PKG_BASE)src/bamtools-2.3.0 -L$(PKG_BASE)/htslib-1.3 -lhts -lbamtools 

BAMTOOLS_DIR := /bamtools-2.3.0/
HTSLIB_DIR := /htslib-1.3/

ABS_BAMTOOLS_DIR := $(realpath $(BAMTOOLS_DIR))
ABS_HTSLIB_DIR := $(realpath $(HTSLIB_DIR))

CXX := g++
CXXFLAGS := -fPIC -std=c++0x -Wno-deprecated -Wall -O3 -fexceptions -g -Wl,-rpath,$(ABS_BAMTOOLS_DIR)/lib/
INCLUDES := -fPIC -I$(ABS_BAMTOOLS_DIR)/include/ -I$(ABS_HTSLIB_DIR)/ -L$(ABS_BAMTOOLS_DIR)/lib/ -L$(ABS_HTSLIB_DIR)/



.PHONY : bamtools
bamtools:
	mkdir $(ABS_BAMTOOLS_DIR)/build; cd $(ABS_BAMTOOLS_DIR)/build; cmake ..; make; cd ../../

.PHONY : cleanbamtools
cleanbamtools:
	cd $(ABS_BAMTOOLS_DIR)/build; make clean; cd ../../
	
.PHONY : htslib
htslib:
	cd $(ABS_HTSLIB_DIR); ./configure; make; cd ../



.PHONY : lancet
lancet: Lancet.cc Lancet.hh align.cc util.hh util.cc sha256.hh sha256.cc FET.hh ErrorCorrector.hh Mer.hh Ref.cc Ref.hh ReadInfo.hh ReadStart.hh Transcript.hh Variant.hh Variant.cc VariantDB.hh VariantDB.cc Edge.cc Edge.hh ContigLink.hh Node.cc Node.hh Path.cc Path.hh ContigLink.cc Graph.cc Graph.hh Microassembler.cc Microassembler.hh
	$(CXX) $(CXXFLAGS) $(INCLUDES) Lancet.cc Edge.cc Node.cc Graph.cc Microassembler.cc Ref.cc Path.cc ContigLink.cc align.cc util.cc sha256.cc VariantDB.cc Variant.cc -o lancet $(ABS_HTSLIB_DIR)/libhts.a -lz -ldl -lbamtools -lpthread


#.PHONY : clean
clean:
	 m -rf $(ABS_BAMTOOLS_DIR)/build; rm -rf $(ABS_BAMTOOLS_DIR)/include; rm -rf $(ABS_BAMTOOLS_DIR)/lib; rm -rf $(ABS_BAMTOOLS_DIR)/bin; cd $(ABS_HTSLIB_DIR); make clean; rm -rf lancet;




